
<div class="container-fluid mt-5">
    <div class="container">

        <div class="row">
            <div class="col-9">
                <h1>{{title}}</h1>
            </div>
            <div class="col-3 text-end">
                <a href="/nuevo-libro" class="btn btn-primary">Nuevo Libro</a>
            </div>
        </div>
        <hr>

        <div class="row">
        {{#each libros}}
            <div class="col-md-3">
                <a href="/libros/{{id}}">
                <div class="card mb-4 card-prod shadow-sm bg-dark">
                        {{#if imagen}}
                            <img  src="/images/{{imagen}}" class="card-img" alt="{{nombre}}">
                        {{else}}
                            <img  src="/images/default.png" class="card-img" alt="{{nombre}}">
                        {{/if}}
                    <div class="card-body">
                        <p class="h4 text-white">{{nombre}}</p>
                    </div>
                </div>
                </a>
            </div>
        {{/each}}
    </div>



    </div>
</div>